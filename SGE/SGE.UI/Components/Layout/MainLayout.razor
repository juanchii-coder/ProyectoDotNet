@namespace SGE.UI.Components
@inject EstadoDeUsuario EstadoDeUsuario
@inherits LayoutComponentBase

<div class="page">
    @if (EstadoDeUsuario.IsLoggedIn)
    {
        <div class="sidebar">
            <NavMenu />
        </div>
    }

    <main>
        <div class="top-row px-4">
            <NavLink class="nav-link" href="login">
                <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Login
            </NavLink>

            <NavLink class="nav-link" href="register">
                <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> register
            </NavLink>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
