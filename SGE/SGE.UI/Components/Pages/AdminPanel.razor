@page "/adminpanel"
@inject AuthService AuthService
@inject UserService UserService

<h3>Admin Panel</h3>

@if (users == null)
{
    <p>Loading...</p>
}
else
{
    <ul>
        @foreach (var user in users)
        {
            <li>@user.Email</li>
            <button @onclick="@(() => GrantPermission(user.Email, "desiredPermission"))">Grant Permission</button>

        }
    </ul>
}

@code {
    private List<UserModel> users;

    protected override async Task OnInitializedAsync()
    {
        users = await UserService.GetUsers();
    }

    private void GrantPermission(string email, string permission)
    {
        // Grant permission logic
    }
}
